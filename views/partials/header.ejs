<div class='flash container-fluid'>
    <% if(error && error.length > 0) { %>
      <div class='alert alert-danger' role ='alert'>
        <%= error %>
      </div>
    <%}%>
    <% if(success && success.length > 0) { %>
      <div class='alert alert-success' role ='alert'>
        <%= success %>
      </div>  
    <%}%>
</div>

<header class="container-fluid header">

    <!-- NAV OPEN BUTTON -->
    <span class="nav_opn_button" onclick="openNav()">&#9776;</span>

    <!-- LOGO -->
    <div class="logo_wrapper">
        <a href="/">
            <img src="/IMG/logo.png" alt="logo_img" class="logo_img">
            <p class="logo_name">NuStar</p>
        </a>
    </div>

    <!-- SEARCH BAR -->
    <form action="/song/search" method="POST" class="search_bar">
        <% if(typeof keyword != 'undefined'){ %>
            <input type="text" name="search" placeholder="Search by song, artist, album" class="search_input" value="<%= keyword %>">
        <% } else { %>
            <input type="text" name="search" placeholder="Search by song, artist, album" class="search_input">
        <% } %>
        <button class="search_button">Search</button>
    </form>

    <% if(!currentUser) {%>
        <!-- SIGN BUTTON -->
        <a href="/sign_up" target="_self" class="sign_button">
            <button class="sign_up">Sign up</button>
        </a>
        <a href="/sign_in" target="_self" class="sign_button">
            <button class="sign_in">Sign in</button>
        </a>
    <% } else { %>
        <!-- USER IMG -->
        <div class="user_link_button">
            <a href="/user" class="user_link">
                <% if(currentUser.image != ""){ %>
                    <img src="<%= currentUser.image %>" alt="user_img" class="user_img">
                <% } else { %>
                    <img src="/IMG/user_icon.png" alt="user_img" class="user_img">
                <% } %>
                <% if(currentUser.privilage == 'Membership'){ %>
                    <img src="/IMG/membership_icon.png" alt="rank_icon" class="membership">
                <% } %>
            </a>
        </div>
        <div class="other_button">
            <img src="/IMG/other_icon.png" alt="other_button">
        </div>
        <div class="other_bar">
            <a href="/sign_out">
                <button class="sign_out_button">Sign out</button>
            </a>
        </div>
    <% } %> 

</header>

<!-- NAV BAR -->
<nav class="nav_bar">
    <a href="javascript:void(0)" class="nav_cls_button" onclick="closeNav()">&times;</a>
    <a href="/" class="nav_link">
        <div class="nav_icon">
            <img src="/IMG/home_icon.png" alt="home_icon">
        </div>
        Home
    </a>
    <a href="/song/top" class="nav_link">
        <div class="nav_icon">
            <img src="/IMG/top_icon.png" alt="top_icon">
        </div>
        Top music
    </a>
    <a href="/membership" class="nav_link">
        <div class="nav_icon">
            <img src="/IMG/member_icon.png" alt="member_icon">
        </div>
        Membership
    </a>
    <% if(currentUser){ %>
        <a href="/user/following" class="nav_link">
            <div class="nav_icon">
                <img src="/IMG/following_icon.png" alt="following_icon">
            </div>
            My following
        </a>
        <a href="/user" class="nav_link">
            <div class="nav_icon">
                <img src="/IMG/mysong_icon.png" alt="mysong_icon">
            </div>
            My song
        </a>
    <% } %>
    <a href="/album" class="nav_link">
        <div class="nav_icon">
            <img src="/IMG/album_icon.png" alt="album_icon">
        </div>
        Album
    </a>
    <a href="/artist" class="nav_link">
        <div class="nav_icon">
            <img src="/IMG/artist_icon.png" alt="artist_icon">
        </div>
        Artist
    </a>
    <a href="/category" class="nav_link">
        <div class="nav_icon">
            <img src="/IMG/category_icon.png" alt="category_icon">
        </div>
        Category
    </a>
</nav>
